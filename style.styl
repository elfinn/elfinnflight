standard-border()
  border-color #666
  border-style solid

#header
  standard-border()
  text-align center
  width 80%
  margin auto
  a
    text-decoration none
    color black
    font-size 62px
    line-height 55px
    text-transform uppercase
    font-weight bold
    font-family Garamond, times, serif
    letter-spacing 3px

#content
  width -webkit-calc(80% \- 40px)
  width calc(80% \- 40px)
  padding 20px 20px
  margin auto
  overflow hidden
  & div
    margin-bottom 20px

.pc
  height 375px
  width 500px

#photos
  display none
  height 375px
  width 500px
  overflow hidden
  padding 10px
  standard-border()
  text-align center
  float left
  margin-right 20px
  & a
    border 0
    display inline-block
    vertical-align middle
    &:before,&::before
      display inline-block
      height 375px
      width 0
      content " "
      vertical-align middle
  & img
    max-height 375px
    max-width 500px
    vertical-align middle

#texts
  display block
  standard-border()
  height 375px
  width -webkit-calc(100% \- 572px)
  width calc(100% \- 572px)
  padding 10px
  text-overflow elipsis
  overflow hidden
  margin-left 20px
  
@media(max-width: 1150px)
  #texts
    width 500px
    margin auto
  #photos
    float none
    margin auto
